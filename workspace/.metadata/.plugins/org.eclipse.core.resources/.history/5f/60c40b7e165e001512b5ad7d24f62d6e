package flatcraft.worlds;

import java.awt.Point;

import flatcraft.Sheep;
import flatcraft.blocks.Block;
import flatcraft.blocks.DirtBlock;
import flatcraft.blocks.DoorBlock;
import flatcraft.blocks.GrassBlock;
import flatcraft.blocks.TreeBlock;

public class SheepWorld extends FlatWorld {

	public SheepWorld(int rows, int columns) {
		super(rows, columns);
		spawnPosition = new Point(1, 6);
		
		Block dirt = new DirtBlock();
		Block grass = new GrassBlock();
		Block door = new DoorBlock();
		Block tree = new TreeBlock();
		
		placeBlock(19, 3, door);
		
		breakBlock(7, 2);
		breakBlock(8, 2);
		breakBlock(9, 2);
		breakBlock(10, 2);
		breakBlock(11, 2);
		breakBlock(8, 1);
		breakBlock(9, 1);
		breakBlock(10, 1);
		
		placeBlock(0, 5, grass);
		placeBlock(0, 4, dirt);
		placeBlock(0, 3, dirt);
		placeBlock(0, 2, dirt);
		
		placeBlock(1, 5, grass);
		placeBlock(1, 4, dirt);
		placeBlock(1, 3, dirt);
		placeBlock(1, 2, dirt);
		
		placeBlock(2, 5, grass);
		placeBlock(2, 4, dirt);
		placeBlock(2, 3, dirt);
		placeBlock(2, 2, dirt);
		
		placeBlock(4, 3, grass);
		placeBlock(3, 4, grass);
		placeBlock(2, 5, grass);
		placeBlock(1, 5, grass);
		
	}

	@Override
	protected void onGameStart() {
		super.onGameStart();
		Sheep sheep = new Sheep();
		addPlayer(sheep);
		sheep.startPatrol();
	}

}
