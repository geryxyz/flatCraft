package flatcraft.worlds;

import java.awt.Point;

import flatcraft.Sheep;
import flatcraft.blocks.Block;
import flatcraft.blocks.DoorBlock;
import flatcraft.blocks.TreeBlock;

public class SheepWorld extends FlatWorld {

	public SheepWorld(int rows, int columns) {
		super(rows, columns);
		spawnPosition = new Point(1, spawnPosition.y +1 );
		
		Block door = new DoorBlock();
		Block tree = new TreeBlock();
		
		placeBlock(19, 3, door);
		placeBlock(5, 3, tree);
		
		breakBlock(7, 2);
		breakBlock(8, 2);
		breakBlock(9, 2);
		breakBlock(10, 2);
		breakBlock(11, 2);
		breakBlock(8, 1);
		breakBlock(9, 1);
		breakBlock(10, 1);
	}

	@Override
	protected void onGameStart() {
		super.onGameStart();
		Sheep sheep = new Sheep();
		addPlayer(sheep);
		sheep.startPatrol();
	}

}
