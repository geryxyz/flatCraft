import flatcraft.*;
import flatcraft.blocks.Block;

public class Main {

	public static void main(String[] args) {
		Game game = new Game(Level.SHEPHERD);
		
		World world = game.getWorld();
		world.breakBlock(5, 3);
		
		Block planks = new PlanksBlock();
		
		for(int x = 0; x < 12; x++) {
			world.placeBlock(x, 2, planks);
		}
		
		game.start();
	}

}
