import flatcraft.*;

public class SmartPlayer extends Player {

	@Override
	protected void onKeyDown(int keyCode) {
		switch(keyCode) {
			case Key.LEFT:
				move(-1, 0);
				break;
			case Key.RIGHT:
				move(1, 0);
				break;
			case Key.SPACE:
				act(Action.MOVE_LEFT);
				act(Action.MOVE_LEFT);
				
				break;
		}
	}
	
}
