package flatcraft.worlds;

import java.awt.Point;

import flatcraft.Sheep;
import flatcraft.blocks.Block;
import flatcraft.blocks.DoorBlock;
import flatcraft.blocks.StoneBlock;

public class SheepWorld extends FlatWorld {
	
	private Sheep sheep;

	public SheepWorld(int rows, int columns) {
		super(rows, columns);
		spawnPosition = new Point(1, spawnPosition.y);
		
		Block door = new DoorBlock();
		Block stone = new StoneBlock();
		
		placeBlock(19, 3, door);
		placeBlock(5, 3, stone);
		
		sheep = new Sheep();
		addPlayer(sheep);
	}

	@Override
	protected void onGameStart() {
		sheep.startPatrol();
	}

}
