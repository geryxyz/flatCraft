import flatcraft.*;

public class SmartPlayer extends Player {

	@Override
	protected void onKeyDown(int keyCode) {
		switch(keyCode) {
			case Key.LEFT:
				move(-1, 0);
				break;
			case Key.RIGHT:
				move(1, 0);
				break;
			case Key.SPACE:
				//move(0, 1);
				//wait(500);
				//move(0, -1);
				
				Game.mainWindow.getImageGrid().setImage(8, 8, Images.PLAYER, 500);
				Game.mainWindow.getImageGrid().setImage(8, 8, Images.BLOCK_STONE, 500);
				break;
		}
	}
	
}
