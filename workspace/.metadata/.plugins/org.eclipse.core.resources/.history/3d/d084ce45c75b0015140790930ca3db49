import flatcraft.*;

public class SmartPlayer extends Player {

	@Override
	protected void onKeyDown(int keyCode) {
		switch(keyCode) {
			case Key.LEFT:
				move(-1, 0);
				break;
			case Key.RIGHT:
				move(1, 0);
				break;
			case Key.SPACE:
				move(0, 1);

				Game.mainWindow.showMessage("You ran into wall!");
				move(0, 1);
				//move(0, -1);
				
				break;
		}
	}
	
}
